<h1>RealTime Products</h1>
<p><a href="/">Ir a Home (render servidor)</a></p>

<section>
  <h2>Crear producto (vía WebSocket)</h2>
  <form id="productForm">
    <input name="title" placeholder="Título" required />
    <input name="description" placeholder="Descripción" />
    <input name="price" placeholder="Precio" type="number" step="0.01" required />
    <input name="thumbnail" placeholder="URL imagen" />
    <input name="stock" placeholder="Stock" type="number" />
    <input name="code" placeholder="Código" />
    <button type="submit">Crear</button>
  </form>
</section>

<section>
  <h2>Productos (en tiempo real)</h2>
  <ul id="productsList">
    {{#each products}}
      <li data-id="{{this.id}}">
        <strong>{{this.title}}</strong> - ${{this.price}} - stock: {{this.stock}}
        <button class="deleteBtn" data-id="{{this.id}}">Eliminar</button>
      </li>
    {{/each}}
  </ul>
</section>

<script src="/js/realtime.js"></script>
